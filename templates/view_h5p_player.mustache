<div class="my-2 pt-3">
    {{#backurl}}
        <a href="{{backurl}}" class="btn btn-primary" title="{{backurlstring}}">
            {{#pix}} t/left, core, {{backurlstring}}{{/pix}}
            {{backurlstring}}
        </a>
    {{/backurl}}
    {{#editurl}}
        <a href="{{editurl}}" class="btn btn-success" title="{{#str}} view:eportfolio:button:edit, local_eportfolio {{/str}}">
            {{#pix}} i/edit, core,
                {{#str}} view:eportfolio:button:edit, local_eportfolio {{/str}}
            {{/pix}}
            {{#str}} view:eportfolio:button:edit, local_eportfolio {{/str}}
        </a>
    {{/editurl}}
